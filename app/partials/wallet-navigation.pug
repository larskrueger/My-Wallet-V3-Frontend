.left-navigation.flex-column.flex-between(ng-if="status.isLoggedIn")
  ul.aside.flex-1-0
    li.header(ui-sref-active="current", ng-click="hideMenu()")
      a(ui-sref="wallet.common.home")
        i.icon-home
        span(translate="DASHBOARD")
    li.mv-10(ng-show="showEthereum()")
      div
        span.tx-divider.pos-rel.ml-10.em-200(translate="MY_TRANSACTIONS")
    li.scroll-parent.header(ui-sref-active="current" ng-click="hideMenu()")
      a(ui-sref="wallet.common.btc.transactions")
        i.icon-bitcoin
        span(ng-show="showEthereum()" translate="BITCOIN")
        span(ng-hide="showEthereum()" translate="MY_TRANSACTIONS")
    li.scroll-parent.header(ui-sref-active="current" ng-show="showEthereum()" ng-click="hideMenu()")
      a(ui-sref="wallet.common.eth.transactions")
        i.icon-ethereum
        span.flex-row.flex-align-end
          span ETHER
    li.scroll-parent.header(ui-sref-active="current" ng-click="hideMenu()")
      a(ui-sref="wallet.common.bch.transactions")
        i.icon-bitcoin-cash
        span.flex-row.flex-align-end
          span BITCOIN CASH
    div.border-solid.mb-15.mt-15.mh-15(ng-show="showEthereum()")
    // Don't forget to update controllers/coinifyCheckout.controller.js
    li.header(ui-sref-active="current" ng-click="hideMenu()" ng-show="canTrade || shouldShowInviteForm")
      pulse-cta(
        active-when="shouldShowBuyCta() && !shouldShowInviteForm"
        on-dismiss="setBuyCtaDismissed()"
        message-text="TRADE_BITCOIN_ALERT"
        button-text="TRADE_BITCOIN"
        route="wallet.common.buy-sell"
        color="green")
      a(ng-hide="shouldShowInviteForm"
        ui-sref="wallet.common.buy-sell"
        ng-click="dismissBuyCta()")
        i.icon-buy-sell
        span(translate="{{tradeLink}}")
      a(ng-show="shouldShowInviteForm"
        ng-click="showInviteForm()")
        i.icon-buy-sell
        span(translate="BUY_BITCOIN")
    li.header(ui-sref-active="current" ng-click="hideMenu()" ng-show="showShift() && isInWhitelistedState")
      a(ui-sref="wallet.common.shift")
        i.icon-ExchangeTab
        span.flex-row.flex-align-end
          span(translate="EXCHANGE_SIMPLE")
    li.header.mbm(ui-sref-active="current",  ng-click="hideMenu()")
      pulse-cta(
        active-when="shouldShowSecurityWarning()"
        on-dismiss="setSecurityWarningDismissed()"
        message-text="{{getSecurityWarningMessage()}}"
        button-text="SECURE_WALLET"
        route="wallet.common.security-center"
        color="red")
      a(ui-sref="wallet.common.security-center")
        i.icon-lock
        span(translate="SECURITY_CENTER")
        .progress-bar-wrapper.mlm.flex-1(ng-hide="security.level == 6")
          .bar(ng-class="'level-' + security.level")
    li.scroll-parent.header.mbm(ui-sref-active="current")
      a(ui-sref="wallet.common.settings")
        i.icon-settings
        span(translate="SETTINGS")
      ul.scroll-settings.aside-list.pas(ng-show="showOrHide('settings')" ng-click="hideMenu()")
        li.mts.mbm(ui-sref-active="active")
          a.pas(ui-sref="wallet.common.settings.info")
            span(translate="GENERAL")
        li.mvm(ui-sref-active="active")
          a.pas(ui-sref="wallet.common.settings.preferences")
            span(translate="PREFERENCES")
        li.mvm(ui-sref-active="active")
          a.pas(ui-sref="wallet.common.settings.security")
            span(translate="SECURITY")
        li.mvm(ng-class="{active: accountsRoute()}")
          a.pas(ui-sref="wallet.common.settings.accounts_index")
            span(translate="MENU_ACCOUNTS_AND_ADDRESSES")
    li.header(ui-sref-active="current", ng-click="hideMenu()")
      a(ui-sref="wallet.common.faq")
        i.icon-help
        span(translate="FAQ")
    div.border-solid.mb-15.mt-15.mh-15.visible-xs.visible-sm
    li.visible-xs.visible-sm.header(ui-sref-active="current" ng-click="refresh()")
      a(ng-click="refresh()")
        span.upper(translate="REFRESH")
    li.visible-xs.visible-sm.header(ui-sref-active="current")
      a(ng-click="logout()")
        span.upper(translate="SIGNOUT")
  ul.aside.wallet-footer
    li.header.mbm
      span(translate="SPONSORS")
      adverts
    li.terms-policy
      ul.flex-center.flex-wrap.aside.em-300.type-sm
        li.pointer.mrm
          a.text-color(href="https://www.blockchain.com/terms", translate="TOS" target="_blank" rel="noopener noreferrer")
        li.mrm.type-xs
          i.ti-control-record
        li.pointer.mrm
          a.text-color(href="https://www.blockchain.com/privacy", translate="PRIVACY" target="_blank" rel="noopener noreferrer")
        li.mrm.type-xs
          i.ti-control-record
        li.pointer
          a.text-color(href="https://www.blockchain.com/about", translate="ABOUT" target="_blank" rel="noopener noreferrer")
