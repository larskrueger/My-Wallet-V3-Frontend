.modal-body
  .flex-column(ng-if="$ctrl.isx")
    .mvl.em-500
      span.f-14 Identity Verification Status
    div
      span(translate="{{$ctrl.completedState}}")
        
  .flex-column.mvm(ng-if="!$ctrl.tradeCompleted && !$ctrl.isx")
    div
      p.pb-15.ptn.f-14(translate="SELL.RECEIVE_EMAIL_CONFIRMATION")
    .left-align
      p.colon.em-500.mbs.type-lbl(translate="SELL.ORDER_DETAILS")
    .flex-column.bg-grey.phm.border
      .flex-row.flex-between.pvm
        span.colon(translate="SELL.TRADE_ID")
        span {{ $ctrl.id }}
      .flex-row.flex-between.pvm
        span.colon(translate="SELL.DATE_INITIALIZED")
        span {{ $ctrl.sellTrade.createdAt | date:$ctrl.dateFormat }}
      .flex-row.flex-between.pvm
        span.colon(translate="SELL.BTC_SOLD")
        span {{ $ctrl.btcSold }} BTC
    .left-align
      p.colon.em-500.mbs.type-lbl.mt-25(translate="SELL.PAYOUT_DETAILS") 
    .flex-column.bg-grey.phm.border
      .flex-row.flex-between.pvm
        span.colon(translate="SELL.BANK_ACCOUNT")
        span {{ $ctrl.bank }}
      .flex-row.flex-between.pvm
        span.colon(translate="SELL.CREDIT_ISSUED")
        span {{ $ctrl.creditIssued }}
    .left-align
      p.type-sm.mtl(translate="SELL.1_2_DAYS")
        
  .flex-column(ng-if="$ctrl.tradeCompleted && !$ctrl.isx")
    .mvl.em-500(ng-show="$ctrl.sellTrade.state !== 'completed'")
      span.pvm.type-h5.state-danger-text(translate="Trade")
      | &nbsp;
      span.type-h5.state-danger-text {{$ctrl.sellTrade.state}}.
    .mb-20.mtn(ng-show="$ctrl.sellTrade.state === 'completed'")
      span.f-14(translate="SELL.RECEIVE_EMAIL_RECEIPT")
    .left-align
      p.colon.em-500.mbs.type-lbl(translate="SELL.ORDER_DETAILS")
    .flex-column.bg-grey.phm.border
      .flex-row.flex-between.pvm
        span.colon(translate="SELL.TRADE_ID")
        span {{ $ctrl.sellTrade.id }}
      .flex-row.flex-between.pvm
        span.colon(translate="SELL.DATE_INITIALIZED")
        span {{ $ctrl.sellTrade.createdAt | date:$ctrl.dateFormat }}
      .flex-row.flex-between.pvm
        span.colon(translate="SELL.BTC_SOLD")
        span {{ $ctrl.sellTrade.sendAmount / 100000000 }} BTC
    .left-align
      p.colon.em-500.mbs.type-lbl.mt-25(translate="SELL.PAYOUT_DETAILS") 
    .flex-column.bg-grey.phm.border
      .flex-row.flex-between.pvm
        span.colon(translate="SELL.BANK_ACCOUNT")
        span {{ $ctrl.bank }}
      .flex-row.flex-between.pvm
        span.colon(translate="SELL.CREDIT_ISSUED")
        span {{ $ctrl.creditIssued }}
    .mvm
      span.f-12(ng-show="$ctrl.showNote()" translate="SELL.PLEASE_NOTE_BANK_POLICIES")
.modal-footer.flex-end.flex-row
  .flex-1.flex-end
    button.button-primary(translate="CLOSE" ng-click="$ctrl.dismiss()")
