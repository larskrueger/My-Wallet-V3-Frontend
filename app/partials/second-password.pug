.modal-header(data-preflight-tag="SecondPasswordModal")
  h3(translate="SECOND_PASSWORD")    
.modal-body.clearfix
  .alert-in-app
    alerts(context="alerts")
  form(role="form" name="secondPassForm" ng-submit="submit()" novalidate)
    .form-group.clearfix(ng-class="{'has-error': errors.amount}")
      label.col-sm-3.control-label(translate="PASSWORD")
      .col-sm-9
        input.form-control(type="password" ng-model="secondPassword")          
        span.help-block {{ error }}
    .form-group.clearfix
      .col-sm-12
        virtual-keyboard(ng-model="secondPassword")

.modal-footer.pal.flex-end
  button.button-muted.mrl(type="button" ng-click="cancel()" translate="CANCEL" ng-hide="insist")
  button.button-primary(type="submit" ng-click="submit()" ui-ladda="busy" data-style="expand-left" ladda-translate="SUBMIT")
