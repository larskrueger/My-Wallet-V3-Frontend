.modal-body.flex(data-preflight-tag="FirstLogin")
  img.rocket-gif(src="img/rocket.gif")
  .flex-column.flex-between.rocket-text.flex-1.plvl
    .flex-column
      p.mbl.type-h4.em-300(translate="THANK_YOU_FOR_JOINING" translate-values="{count: walletCount}")
      p.mbl.type-h5.width-100.em-300
        span(translate="FIRST_LOGIN_TEXT_1")
        | &nbsp;
        a.security-red(ui-sref="wallet.common.security-center")
          i.icon-lock
          | &nbsp;
          span(translate="SECURITY_CENTER")
          | &nbsp;
        span(translate="FIRST_LOGIN_TEXT_2")
    button.button-primary.mtl(ng-click="$close()" translate="FIRST_LOGIN_ACTION")
