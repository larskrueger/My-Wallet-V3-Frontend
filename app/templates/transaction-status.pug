.flex-column(ng-if="!complete")
  transaction-warning(transaction="transaction")
  .flex-row.flex-between
    i.pointer.ti-new-window.blue(ng-click="verify()" ng-show="isCoin('btc')" uib-tooltip="{{'VERIFY_ON_BCI' | translate}}" tooltip-append-to-body="true")
    i.pointer.ti-new-window.blue.mrs(ng-click="verify()" ng-show="isCoin('eth')" uib-tooltip="{{'VERIFY_ON_ETHERSCAN' | translate}}" tooltip-append-to-body="true")
    i.pointer.ti-new-window.blue.mrs(ng-click="verify()" ng-show="isCoin('bch')" uib-tooltip="{{'VERIFY_ON_BLOCKCHAIR' | translate}}" tooltip-append-to-body="true")
    helper-button(content="{{ 'TRANSACTION_WILL_COMPLETE_IN' | translate:{ minutes: minutesRemaining } }}"  ng-if="isCoin('btc') && !frugalWarning" append="true" linktext="LEARN_MORE_LOWER" link="https://support.blockchain.com/hc/en-us/articles/217116406-Why-hasn-t-my-transaction-confirmed-yet-")
    helper-button(content="{{ 'TRANSACTION_WILL_COMPLETE_IN' | translate:{ minutes: minutesRemaining } }}"  ng-if="isCoin('bch') && !frugalWarning" append="true")
    helper-button(content="{{ 'TRANSACTION_WILL_COMPLETE_IN_ETH' }}"  ng-if="!frugalWarning && isCoin('eth')" append="true" linktext="LEARN_MORE_LOWER" link="https://ethereum.stackexchange.com/questions/319/what-number-of-confirmations-is-considered-secure-in-ethereum")
    helper-button(content="{{ 'TRANSACTION_FRUGAL' | translate }}" ng-if="frugalWarning" append="true")
  uib-progressbar.mts(value="transaction.confirmations" max="confirmationsNeeded")
    span.plm(translate="PENDING")
    span :
    span.pls {{ transaction.confirmations }}
    span /{{confirmationsNeeded}}
    span.pls(translate="CONFIRMATIONS")

.success.flex-column(ng-if="complete")
  transaction-warning(transaction="transaction")
  .flex-row.flex-center(ng-click="verify()")
    i.pointer.ti-new-window.blue.mrs(ng-if="isCoin('btc')" uib-tooltip="{{'VERIFY_ON_BCI' | translate}}" tooltip-append-to-body="true")
    i.pointer.ti-new-window.blue.mrs(ng-if="isCoin('eth')" uib-tooltip="{{'VERIFY_ON_ETHERSCAN' | translate}}" tooltip-append-to-body="true")
    i.pointer.ti-new-window.blue.mrs(ng-if="isCoin('bch')" uib-tooltip="{{'VERIFY_ON_BLOCKCHAIR' | translate}}" tooltip-append-to-body="true")
    span.mrs.mbn.em-300.f-12(translate="TRANSACTION_COMPLETE")
    i.ti-check.em-600
