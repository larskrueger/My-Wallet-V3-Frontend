button.helper(
  type="button"
  uib-popover-template="helperText.templateUrl"
  popover-class="message-contextual"
  popover-append-to-body="{{!append}}"
  popover-trigger="outsideClick"
  popover-placement="{{::helperText.placement}}"
  popover-is-open="popoverIsOpen"
  ng-class="{active: popoverIsOpen}"
  ng-click="popoverIsOpen = !popoverIsOpen")
  span(ng-show="!popoverIsOpen && !warning") ?
  span(ng-show="!popoverIsOpen && warning") !
  span(ng-show="popoverIsOpen", class="close-helper")
