.flex-column.note.em-300.width-80.alt-font.f-14
  .flex-row.flex-end.flex-start-tablet
    .flex-row.width-100.basic-grey(ng-hide="editNote")
      .tx-note.em-300.text-cursor(ng-show="label && !note") {{ label }}
      .tx-note.em-300.text-cursor(ng-hide="label && !note" ng-bind-html="note | escapeHtml | highlight:search")
      a.mlm(ng-show="label || note" ng-click="startEditNote()")
        i.ti-pencil
      span.mid-grey.pointer.em-300.f-14(ng-click="startEditNote()" ng-hide="editNote || note || label" translate="ADD_A_DESCRIPTION") 
    a.cancel(ng-click="cancelEditNote()" ng-show="editNote")
      i.ti-close
  .flex-column.input(ng-show="editNote" ng-class="{'pos-abs': transaction.toggled}")
    textarea.em-300(on-enter="saveNote()" ng-model="draftNote" maxlength="255" placeholder="{{'ADD_A_DESCRIPTION' | translate}}")
    .flex-start.mts
      span.label.label-success.pointer(ng-click="saveNote()", translate="SAVE", ng-hide="note")
      span.label.label-success.pointer(ng-click="saveNote()", translate="UPDATE_NOTE", ng-show="note")
      span.label.label-danger.pointer.mls(ng-click="removeNote()" ng-show="note")
        i.ti-trash.type-h4
